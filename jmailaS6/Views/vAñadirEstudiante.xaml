<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jmailaS6.Views.vAñadirEstudiante"
             Title="vAñadirEstudiante">
    <VerticalStackLayout>
        <Label 
            Text="ESTUDIANTE"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="txtNombre"
               Placeholder="Ingrese nombre"></Entry>
        <Entry x:Name="txtApellido"
       Placeholder="Ingrese apellido"></Entry>
        <Entry x:Name="txtEdad"
       Placeholder="Ingrese edad"></Entry>

        <Button x:Name="btnAgregarEstudiante"
                Text="Añadir estudiante"
                Clicked="btnAgregarEstudiante_Clicked"  />
    </VerticalStackLayout>
</ContentPage>